<%= render 'shared/admin_nav' %> 

 <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
          <!-- sidebar content -->
		  <%= render 'shared/admin_side' %> 
		 
        </div>
        <div id="main-content" class="col-xs-9">
          <!--  main content -->
		




<h1>List of Concerns</h1> 


	<%= link_to  new_concern_path, class: 'btn btn-default' do %> 
		 <i class="glyphicon-small glyphicon-plus">  </i>New Area of Concern 
	<%end%> 
<br/><br/>
<table class="table table-hover"> 
	<tr> 

		<th><%= link_to "Name", :sort => "name" %></th> 
		<th><%= link_to "Description", :sort => "description" %></th> 
		<th><%= link_to "Diagnosis?", :sort => "diagnosis" %></th> 
		<th></th> 
		<th></th>
		<th></th>
	</tr> 
	
	<% @concerns.each do |concern| %> 
		<tr> 
			<td><%= concern.name %></td> 
			<td><%= concern.description %></td> 
			<td><%= concern.diagnosis %></td> 
			<td><%= link_to 'Show', concern_path(concern) %></td>
			<td><%= link_to 'Edit', edit_concern_path(concern) %> </td> 
			<td><%= link_to 'Destroy', concern_path(concern), 
					method: :delete, 
					data: { confirm: 'Are you sure?' } %></td> 
		</tr> 
	<% end %> 
</table> 
        </div>
      </div>
    </div>

