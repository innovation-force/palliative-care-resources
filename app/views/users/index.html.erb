<%= render 'shared/admin_nav' %> 

 <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="sidebar" class="col-xs-3">
          <!-- sidebar content -->
		  <%= render 'shared/admin_side' %> 
		 
        </div>
        <div id="main-content" class="col-xs-9">
          <!--  main content -->
		  
<h1>Admins Awaiting Approval</h1> 

		  <table class="table table-hover"> 
			<% @na_users.each do |u| %> 
				<tr> 
					
					<td> <%= u.email %> </td> 

					<td> <%= link_to "Approve", edit_user_path(u) %></td>
					<td><%= link_to 'Delete', user_path(u), 
					method: :delete, 
					data: { confirm: 'Are you sure?' } %></td> 
				
				</tr>
			
			<% end %>
			<% if @na_users.blank? %> 
			<td>None </td>
			<% end %>
			</table>
			<br/>
<h1>All Admins</h1> 

		  <table class="table table-hover"> 
			<% @users.each do |user| %> 
				<tr> 
					
					<td> <%= user.email %> </td> 
					<td>
					<% if user != current_user %> 
					<%= link_to 'Delete', user_path(user), 
					method: :delete, 
					data: { confirm: 'Are you sure?' } %>
					<% end %>
					</td> 
				</tr>
			
			<% end %>
			</table>
        </div>
      </div>
    </div>
