<!DOCTYPE html>
<html>
  <head>
    <title>CareLibrary Admin</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to admin_path, :class => "navbar-brand" do %>
            <%= image_tag "logo.png", :alt => "CareLibrary" %>
          <% end %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Users", admin_users_path %></li>
          <li><%= link_to "Services", admin_services_path %></li>
          <li><%= link_to "Categories", admin_categories_path %></li>
          <li><%= link_to "Providers", admin_providers_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Public Site", root_path %></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= render "shared/flash" %>
      <%= yield %>
    </div>
  </body>
</html>


