<%= stylesheet_link_tag "style" %>



<h1>Services for <%= @category.name %></h1> 

<div class ="crumbs">

</br><strong> Area of Concern: </strong><%= @concern.name %> <%= link_to 'change', browse_concern_path %> 
</br><strong> Category: </strong> <%= @category.name %> <%= link_to 'change', {:controller => "browse", :action => "category", :concern => @concern.id} %>

</br> 

</div>



	<table> 
		<tr> 
			<th>Service</th> 
		</tr> 
		<% if @category.services %>
			<% for service in @category.services%> 

				<tr> 
					<td><%= link_to service.title, {:controller => "browse", :action => "servprovider", :service => service.id, :provider => service.provider_id, :category => @category.id, :concern => @concern.id} %>
					
					 - <%= service.provider.name %> 
				
					</td>
					
				</tr> 

			<% end %> 
		<% end %> 
			
	</table> 

<p>

<%= link_to 'Start Over', browse_concern_path %> 

</p>

