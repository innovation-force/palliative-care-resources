<div class="row">

<div class="col-sm-12">
  <h2><%= @provider.name %></h2>
  <h4><%= @provider.organization %></h4>
</div>

<div class="col-sm-8">
  <ul class="list-group">
    <% @provider.services.each do |service| %>
      <li class="list-group-item <%= "list-group-item-warning" if params[:service_id] == service.id.to_s %>">
        <h4 class="list-group-item-heading"><%= service.title %></h4>
        <p class="list-group-item-text"><%= service.description %></p>
        <p class="list-group-item-text"><%= service.refcount %> referrals</p>
      </li>
    <% end %>
  </ul>
</div>

<div class="col-sm-4">
  <ul class="list-group">
    <li class="list-group-item clearfix">
      <span class="left">Contact</span>
      <span class="right"><%= @provider.contact %></span>
    </li>
    <li class="list-group-item clearfix">
      <span class="left">Phone</span>
      <span class="right"><%= @provider.phone %></span>
    </li>
    <li class="list-group-item clearfix">
      <span class="left">Website</span>
      <span class="right"><%= link_to @provider.website, @provider.website, target: "_blank" %></span>
    </li>
    <li class="list-group-item clearfix">
      <span class="left">Location</span>
      <span class="right">
        <%= @provider.address1 %>
        <%= @provider.address2 %>
        <%= @provider.city %> <%= @provider.state %> <%= @provider.zip %>
      </span>
    </li>
  </ul>
</div>

</div>
