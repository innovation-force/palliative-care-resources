<p class = "fields">
	<%= f.label :title, "Service Title" %><br/> 
	<%= f.text_field :title %> <br/>			
	
	<%= f.label :description, "Service Description" %><br/> 
	<%= f.text_area :description, :rows => 3 %> <br/>

	<br/>
	<label>Categories for Service</label>
	<br/>
	Hold down control or command key to select multiple
	<br/>
	<%= f.collection_select :category_ids, Category.all, :id, :name, {prompt: "Select Associated Categories"}, {multiple: true, size: "7"} %>
	
	<%= f.check_box :_destroy %> 
	<%= f.label :_destroy, "Remove Service" %><br/>
</p>