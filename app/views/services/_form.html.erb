

<%= form_for @service do |f| %> 
	<% if @service.errors.any? %> 
		<div id="error_explanation">
			<h2> 
				<%= pluralize(@service.errors.count, "error") %> prohibited this item from being saved: 
			</h2> 
			<ul> 
				<% @service.errors.full_messages.each do |msg| %> 
					<li> <%= msg %> </li> 
				<% end %> 
			</ul> 
		</div> 
	<%end%> 
	<div class="col-xs-5">
	<p> 
		<%= f.label :title %><br> 
		<%= f.text_field :title, :size => "50" %> 
	</p> 
	
	<p> 
		<%= f.label :description %><br> 
		<%= f.text_area :description, :size => "50" %> 
	</p> 
	
	
	<p>	
		<%= f.select :provider_id, Provider.all.collect { |p| [p.name, p.id]} %>
	
	</p>
	<p> 
	<br/><br/>
		<%= f.submit 'Submit', :class => 'btn btn-default' %>
	</p> 
	</div>
	<div class="col-xs-6">
	<p> 
		<label>Associated Categories</label>
		<div class="height_limit">
		
			<%= hidden_field_tag "service[category_ids][]", nil %>
			<% Category.all.sort_by{|category| category.name}.each do |category| %> 	
				<%= check_box_tag "service[category_ids][]", category.id, 
				@service.categories.include?(category), id: dom_id(category) %>
				<%= label_tag dom_id(category), category.name %></br>
		
		<% end %> 
		</div>
	</p>

	
	
	</div>
	
<% end %> 
