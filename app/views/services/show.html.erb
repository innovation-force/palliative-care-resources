<%= render 'shared/admin_nav' %> 

<div id="main-container" class="container-fluid">
    <div class="row">
        <div id="sidebar" class="col-xs-3">
          <!-- sidebar content -->
		  <%= render 'shared/admin_side' %> 
		 
        </div>
	<div id="main-content" class="col-xs-9">
	  <!--  main content -->
			

<p> 
	<strong>Name:</strong> 
	<%= @service.title %> 
</p> 
<p> 
	<strong>Description:</strong> 
	<%= @service.description %> 
</p> 


<p> <strong>Provider: </strong> 
	<%= @service.provider.name %>
</p>

<p> <strong>Categories: </strong> 
<ul> 
	<% for cat in @service.categories %>
		<li><%= cat.name %> </li>
	<% end %>
</ul> 
</p>
	<%= link_to 'Edit Service', edit_service_path, class: 'btn btn-default' %> 
	<br/><br/>

<% @service.comments.each do |comment| %> 
	<fieldset class = 'comments'>
<p> 
	<strong>Comment:</strong> 
	<%= comment.body %> 
	
</p>
<p> 
Commenter:
	<%= comment.commenter %> 
</p> 

	<%= link_to 'Delete Comment', [comment.service, comment], 
				method: :delete, 
				data: { confirm: 'Are you sure?' } %>
</fieldset>
</br> 
<% end %>

