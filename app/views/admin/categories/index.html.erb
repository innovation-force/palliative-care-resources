<h2>Categories</h2>

<%= link_to "New Category", new_admin_category_path %>

<table class="table">
  <thead>
    <th>Id</th>
    <th>Name</th>
    <th></th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-default btn-xs" %>
          <%= link_to "Delete", admin_category_path(category), method: :delete,
            data: { confirm: "Are you sure you want to delete this category?" },
            class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
