<h2>Resources</h2>

<%= link_to "New Resource", new_admin_resource_path %>

<table class="table">
  <thead>
    <th>Id</th>
    <th>Name</th>
    <th>Organization</th>
    <th></th>
  </thead>
  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.id %></td>
        <td><%= resource.name %></td>
        <td><%= resource.organization %></td>
        <td>
          <%= link_to "Edit", edit_admin_resource_path(resource) %>
          <%= link_to "Delete", admin_resource_path(resource), method: :delete, data: { confirm: "Are you sure you want to delete this resource?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
